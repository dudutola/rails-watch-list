<div class="d-flex justify-content-between mt-5">
  <%= link_to "&larr; Back".html_safe, lists_path %>
  <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn-primary text-decoration-none" %>
</div>

<div class="cards-movies">
  <% if @bookmarks.empty? %>
    <p>Nothing to see here.</p>
  <% else %>
    <div class="card-movies-container">
      <% @bookmarks.each do |bookmark| %>
        <div class="card-movie d-flex gap-3">
          <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" class="movie-poster">

        <div class="movie-info">
          <div class="d-flex align-items-center m-0 gap-2">
            <h4><strong><%= bookmark.movie.title %></strong></h4>
            <i class="fa-solid fa-circle"></i>
            <p class="rating"><%= bookmark.movie.rating.round(1) %> ⭐️</p>
          </div>
          <p class="mb-0"><%= bookmark.movie.overview %></p>
        </div>

        <div class="movie-comment">
          <div class="d-flex align-items-baseline m-0 gap-2">
            <i class="fa-solid fa-quote-left"></i>
            <p><%= bookmark.comment %></p>
          </div>
                      <%= link_to "delete", bookmark_path(bookmark),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "text-danger text-decoration-none"
          %>
        </div>
      </div>
  <% end %>
</div
<% end %>


<%= link_to "Add movie", new_list_bookmark_path(@list) %> |
